{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "mocha": true
  },
  "extends": [
    "standard",
    "react-app"
  ],
  "rules": {
    "no-trailing-spaces": ["error", { "skipBlankLines": true } ],
    "no-return-assign": 0,
    "eol-last": 0,
    "semi": [1, "always"]
  },
  "settings": {
    "react": {
      "createClass": "createReactClass",
      "pragma": "React",
      "version": "16.5.2",
      "flowVersion": "0.86"
    },
    "propWrapperFunctions": [ "forbidExtraProps" ]
  }
}